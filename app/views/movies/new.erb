<!--h1>Insert the form to create a new instance of your model.</h1-->
<% if flash.has?(:err) %>
    <h3 style="color: red;"><%= flash[:err] %></h3>
<% end %>

<div class="typewriter">
<div class="typewriter-text"><h1> Create a new movie</h1></div>
<form method="POST" action="/movies">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @movie ? @movie.title : ""%> "><br><br>
    <label for="category">Category:</label>
    <select name="category">
        <option value="action">Action</option>
        <option value="comedy">Comedy</option>
        <option value="thriller">Thriller</option>
        <option value="sci-fi">Sci-Fi</option>
        <option value="superhero">Superhero</option>
        <option value="horror">Horror</option>
        <option value="drama">Drama</option>
        <option value="documentary">Documentary</option>
    </select><br><br>
    <label for="rating">Rating:</label>
    <select name="rating">
        <option value="g">G</option>
        <option value="pg">PG</option>
        <option value="pg-13">PG-13</option>
        <option value="r">R</option>
        <option value="unrated">Unrated</option>
    </select><br><br>
    <label for="my_rating">My Rating:</label>
    <select name="my_rating">
        <option value="loved">❤❤❤❤❤</option>
        <option value="meh">meh</option>
        <option value="garbage">HOT GARBAGE!!!</option>
    </select><br><br>
    <input type="submit" value="Submit">
    </div>
</form>
