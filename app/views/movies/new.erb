<!--h1>Insert the form to create a new instance of your model.</!h1-->
<% if @movie && @movie.errors %>
    <% @movie.errors.full_messages.each do |msg| %>
        <p style="color: red;"><%= msg %></p>
    <% end %>
<% end %>

<h1> Create a new movie</h1>
<form method="POST" action="/movies">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @movie ? @movie.title : ""%> ">
    <label for="category">Category</label>
    <input type="text" name="category" value="<%= @movie ? @movie.category : ""%> ">
    <label for="rating">Rating</label>
    <input type="text" name="rating" value="<%= @movie ? @movie.rating : ""%> ">
    <input type="submit" value="submit">
</form>
