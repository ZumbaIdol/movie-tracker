<h1> Sign up for a Movie Tracker Account</h1>

<% if @user && @user.errors %>
    <% @user.errors.full_messages.each do |msg| %>
        <p style="color: red;"><%= msg %></p>
    <% end %>
<% end %>

<form method="POST" action="/users">
    <label for="name">Name:</label>
    <input name="name" id="name" type="text" value="<%= @user ? @user.name : ""%> "/><br><br>

    <label for="email">Email:</label>
    <input name="email" id="email" type="email" value="<%= @user ? @user.email : ""%> "/><br><br>

    <label for="password">Password:</label>
    <input name="password" id="password" type="password"><br><br>
    <input type="submit">
</form>