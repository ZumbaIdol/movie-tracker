<h1> Sign up for a Movie Tracker Account</h1>

<% if @user && @user.errors %>
    <% @user.errors.full_messages.each do |msg| %>
        <p style="color: red;"><%= msg %></p>
    <% end %>
<% end %>

<form method="POST" action="/signup">
    <label for="name">First Name:</label>
    <input name="name" id="first_name" type="text" value="<%= @user ? @user.name : ""%> "/>
    <label for="name">Last Name:</label>
    <input name="name" id="last_name" type="text" value="<%= @user ? @user.name : ""%> "/>

    <label for="email">Email:</label>
    <input name="email" id="email" type="text" value="<%= @user ? @user.email : ""%> "/>

    <label for="password">Password:</label>
    <input name="password" id="password" type="password"><br><br>
    <input type="submit">
</form>